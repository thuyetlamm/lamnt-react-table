{
  "compilerOptions": {
    "outDir": "dist",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react",
    "lib": ["es2015", "es2015.promise", "es2016.array.include", "dom"],
    "strict": true,
    "moduleResolution": "node",
    "baseUrl": "src",
    "paths": {
      "src/*": ["src/*"]
    },
    "noEmit": true,
    "resolveJsonModule": true,
    "target": "esnext"
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist", "example"]
}
